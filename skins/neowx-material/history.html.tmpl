<!DOCTYPE html>
<html lang="$lang">
    <head>
        <title>$gettext("history") | $station.location</title>
        #include "head.inc"
    </head>
    <body class="${Extras.Appearance.mode}-theme main-bg" ontouchstart="">

        #attr $active_nav = 'history'
        #include "header.inc"

        <main>

            <div class="container">

                <div class="row my-4 align-content-start">

                    <div class="col-12 mb-4 text-center">
                        <h2 class="h2-responsive text-dark">$gettext("weather_statistics")</h2>
                    </div>

                    <div class="col-sm mb-4 text-center">
                        <div class="card" style="overflow-x: auto;white-space: nowrap;">
                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("min_temp")</h4>
                                $min_temp_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("avg_temp")</h4>
                                $avg_temp_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("max_temp")</h4>
                                $max_temp_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("summer_days")</h4>
                                $summer_days_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("tropical_days")</h4>
                                $tropical_days_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("tropical_nights")</h4>
                                $tropical_nights_table
                            </div>

                            <div class="card card-body">
                                <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-thermometer"></i>
                                $gettext("arctic_days")</h4>
                                $arctic_days_table
                            </div>

                            #if $alltime.rain.has_data
                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-showers"></i>
                                    $gettext("rain")</h4>
                                    $rain_table
                                </div>

                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-showers"></i>
                                    $gettext("rain_days") (> 0.2mm)</h4>
                                    $rain_days_table
                                </div>
                            #end if

                            #if $alltime.windSpeed.has_data
                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-strong-wind"></i>
                                    $gettext("max_wind")</h4>
                                    $max_wind_table
                                </div>

                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-strong-wind"></i>
                                    $gettext("avg_wind")</h4>
                                    $avg_wind_table
                                </div>
                            #end if

                            #if $alltime.UV.has_data
                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-day-sunny"></i>
                                    $gettext("uv_max")</h4>
                                    $uv_max_table
                                </div>
                            #end if

                            #if $alltime.lightning_strike_count.has_data
                                <div class="card card-body">
                                    <h4 class="h5-responsive $Extras.color-text"><i class="wi wi-lightning"></i>
                                    $gettext("lightning_strikes")</h4>
                                    $lightning_strike_count_table
                                </div>
                            #end if
                        </div>
                    </div>

                    ## RT Code Start
                    <div class="col-12 mb-4 text-center">
                        <h2 class="h2-responsive text-dark">$gettext("year_records")</h2>
                    </div>

                    <div class="col-sm mb-4 text-center">
                        <div class="card">

                            <div class="card-body" style="text-align:left;width:100%;">
                                <table class="table text-left records" style="width:100%;">
                                    #if $year.outTemp.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-thermometer"></i>
                                            $getVar('obs.label.outTemp')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.outTemp.max</td>
                                            <td style="font-size:16px;">$year.outTemp.maxtime</td>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("lowest")</td>
                                            <td style="font-size:16px;">$year.outTemp.min</td>
                                            <td style="font-size:16px;">$year.outTemp.mintime</td>
                                        </tr>
                                    #end if
                                    #if $year.appTemp.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-day-windy"></i>
                                            $getVar('obs.label.appTemp')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.appTemp.max</td>
                                            <td style="font-size:16px;">$year.appTemp.maxtime</td>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("lowest")</td>
                                            <td style="font-size:16px;">$year.appTemp.min</td>
                                            <td style="font-size:16px;">$year.appTemp.mintime</td>
                                        </tr>
                                    #end if
                                    #if $year.outHumidity.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-humidity"></i>
                                            $getVar('obs.label.outHumidity')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.outHumidity.max</td>
                                            <td style="font-size:16px;">$year.outHumidity.maxtime</td>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("lowest")</td>
                                            <td style="font-size:16px;">$year.outHumidity.min</td>
                                            <td style="font-size:16px;">$year.outHumidity.mintime</td>
                                        </tr>
                                    #end if
                                    #if $year.barometer.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-barometer"></i>
                                            $getVar('obs.label.barometer')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.barometer.max</td>
                                            <td style="font-size:16px;">$year.barometer.maxtime</td>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("lowest")</td>
                                            <td style="font-size:16px;">$year.barometer.min</td>
                                            <td style="font-size:16px;">$year.barometer.mintime</td>
                                        </tr>
                                    #end if
                                    #if $year.windSpeed.has_data or $year.windGust.has_data or $year.windrun.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-strong-wind"></i>
                                            $getVar('obs.label.wind')</th>
                                        </tr>
                                        #if $year.windSpeed.has_data
                                            <tr>
                                                <td style="font-size:16px;">$gettext("highest") $getVar('obs.label.windSpeed')</td>
                                                <td style="font-size:16px;">$year.windSpeed.max.format('%.0f')</td>
                                                <td style="font-size:16px;">$year.windSpeed.maxtime</td>
                                            </tr>
                                        #end if
                                        #if $year.windGust.has_data
                                            <tr>
                                                <td style="font-size:16px;">$gettext("highest") $getVar('obs.label.windGust')</td>
                                                <td style="font-size:16px;">$year.windGust.max.format('%.0f')</td>
                                                <td style="font-size:16px;">$year.windGust.maxtime</td>
                                            </tr>
                                        #end if
                                        #if $year.windrun.has_data
                                            <tr>
                                                <td style="font-size:16px;">$gettext("longest") $getVar('obs.label.windrun')</td>
                                                <td style="font-size:16px;">$year.windrun.max</td>
                                                <td style="font-size:16px;">$year.windrun.maxtime</td>
                                            </tr>
                                        #end if
                                    #end if
                                    #if $year.rain.has_data or $year.rainRate.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-umbrella"></i>
                                            $getVar('obs.label.rain')</th>
                                        </tr>
                                        #if $year.rain.has_data
                                            <tr>
                                                <td style="font-size:16px;">$gettext("most") $getVar('obs.label.rain')</td>
                                                <td style="font-size:16px;">$year.rain.maxsum</td>
                                                <td style="font-size:16px;">$year.rain.maxsumtime</td>
                                            </tr>
                                        #end if
                                        #if $year.rainRate.has_data
                                            <tr>
                                                <td style="font-size:16px;">$gettext("highest") $getVar('obs.label.rainRate')</td>
                                                <td style="font-size:16px;">$year.rainRate.max</td>
                                                <td style="font-size:16px;">$year.rainRate.maxtime</td>
                                            </tr>
                                        #end if
                                    #end if
                                    #if $year.UV.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-day-sunny"></i>
                                            $getVar('obs.label.UV')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.UV.max</td>
                                            <td style="font-size:16px;">$year.UV.maxtime</td>
                                        </tr>
                                    #end if
                                    #if $year.radiation.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-day-sunny"></i>
                                            $getVar('obs.label.radiation')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("highest")</td>
                                            <td style="font-size:16px;">$year.radiation.max</td>
                                            <td style="font-size:16px;">$year.radiation.maxtime</td>
                                        </tr>
                                    #end if
                                    #if $year.lightning_strike_count.has_data
                                        <tr>
                                            <th colspan="3" class="$Extras.color-text" style="text-align:left;font-size:20px;"><i class="wi wi-lightning"></i>
                                            $getVar('obs.label.lightning_strike_count')</th>
                                        </tr>
                                        <tr>
                                            <td style="font-size:16px;">$gettext("most")</td>
                                            <td style="font-size:16px;">$year.lightning_strike_count.maxsum</td>
                                            <td style="font-size:16px;">$year.lightning_strike_count.maxsumtime</td>
                                        </tr>
                                    #end if
                                </table>
                            </div>
                        </div>
                    </div>

                    ## RT Code End

